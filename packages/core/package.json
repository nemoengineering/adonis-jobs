{
  "name": "@nemoventures/adonis-jobs",
  "type": "module",
  "version": "1.0.0-beta.0",
  "description": "Job queues for your AdonisJS applications",
  "license": "MIT",
  "repository": "https://github.com/nemoengineering/adonis-jobs",
  "imports": {
    "#job/*": "./src/job/*.js"
  },
  "exports": {
    ".": "./build/index.js",
    "./bull": "./build/src/bull.js",
    "./types": "./build/src/types/index.js",
    "./builtin/*": "./build/src/builtin/*.js",
    "./commands": "./build/commands/main.js",
    "./queue_provider": "./build/providers/queue_provider.js",
    "./metrics": "./build/src/metrics/index.js",
    "./services/main": "./build/services/main.js",
    "./ui/queuedash": "./build/src/ui/queuedash/index.js"
  },
  "main": "build/index.js",
  "files": [
    "!build/bin",
    "!build/factories",
    "!build/tests",
    "build"
  ],
  "engines": {
    "node": ">=20.6.0"
  },
  "scripts": {
    "test": "c8 npm run quick:test",
    "copy:templates": "copyfiles --up 1 \"stubs/**/*.stub\" build",
    "compile": "tsup-node && tsc --emitDeclarationOnly --declaration",
    "postcompile": "npm run copy:templates && npm run index:commands",
    "build": "npm run compile",
    "prerelease": "pnpm build",
    "release": "pnpm build && pnpm release-it --preRelease=beta",
    "version": "npm run build",
    "typecheck": "tsc --noEmit",
    "index:commands": "adonis-kit index build/commands",
    "quick:test": "NODE_DEBUG=\"adonisjs:worker\" node --enable-source-maps --loader=ts-node/esm bin/test.ts",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json @nemoventures/adonis-jobs"
  },
  "peerDependencies": {
    "@adonisjs/core": "^6.0.0",
    "@adonisjs/http-server": "^7.6.1",
    "@julr/adonisjs-prometheus": "^1.0.2",
    "@taskforcesh/bullmq-pro": "^7.35.2",
    "bullmq": "^5.53.2"
  },
  "peerDependenciesMeta": {
    "@julr/adonisjs-prometheus": {
      "optional": true
    },
    "@taskforcesh/bullmq-pro": {
      "optional": true
    },
    "bullmq": {
      "optional": true
    }
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@poppinss/utils": "^6.9.4",
    "@queuedash/api": "^3.6.0",
    "@queuedash/client": "^3.6.0",
    "@queuedash/ui": "^3.6.0",
    "@trpc/server": "^11.3.1",
    "bullmq-otel": "^1.0.1",
    "import-meta-resolve": "^4.1.0"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "catalog:",
    "@japa/assert": "^4.0.1",
    "@japa/expect": "^3.0.4",
    "@japa/expect-type": "^2.0.3",
    "@japa/file-system": "^2.3.2",
    "@japa/plugin-adonisjs": "^4.0.0",
    "@japa/runner": "^4.2.0",
    "@japa/snapshot": "^2.0.8",
    "@julr/adonisjs-prometheus": "^1.0.2",
    "@taskforcesh/bullmq-pro": "^7.35.2",
    "@types/node": "^22.15.30",
    "@types/pluralize": "^0.0.33",
    "bullmq": "^5.53.2"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "push": true,
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  },
  "c8": {
    "reporter": [
      "text",
      "html"
    ],
    "exclude": [
      "tests/**",
      "factories/**"
    ]
  },
  "tsup": {
    "entry": [
      "index.ts",
      "src/types.ts",
      "src/job.ts",
      "src/builtin",
      "src/multi_dispatcher.ts",
      "src/bull.ts",
      "services/main.ts",
      "src/ui/**/index.ts",
      "src/metrics/index.ts",
      "providers/queue_provider.ts",
      "./commands/**/*.ts",
      "root_dir.ts"
    ],
    "outDir": "./build",
    "clean": true,
    "format": "esm",
    "dts": false,
    "sourcemap": true,
    "target": "esnext"
  }
}
